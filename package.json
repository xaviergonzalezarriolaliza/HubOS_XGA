{
  "name": "guest-in-touch-tests",
  "version": "1.0.0",
  "description": "Playwright tests for Guest in Touch app",
  "main": "index.js",
  "scripts": {
    "test": "npx playwright test --reporter=list",
    "generate:pptx": "node scripts/generate_pptx.js",
    "generate:pdf": "node scripts/generate_pdf.js",
    "generate:report:pdf": "node scripts/report_to_pdf.js",
    "generate:pdf:from-md": "node scripts/gen-report-from-md.js",
    "test:all": "npx playwright test --reporter=list",
    "test:all:headed": "npx playwright test --reporter=list --headed --timeout=60000 --workers=1",
    "test:headed:extended": "npx playwright test --reporter=list --headed --timeout=120000 --workers=1",
    "test:matrix": "npm run test:all && npm run test:all:headed",

    "test:chromium": "npx playwright test --reporter=list --project=\"Chromium\"",
    "test:chromium:headed": "npx playwright test --reporter=list --project=\"Chromium\" --headed --timeout=60000 --workers=1",

    "test:firefox": "npx playwright test --reporter=list --project=\"Firefox\"",
    "test:firefox:headed": "npx playwright test --reporter=list --project=\"Firefox\" --headed --timeout=60000 --workers=1",

    "test:webkit": "npx playwright test --reporter=list --project=\"WebKit\"",
    "test:webkit:headed": "npx playwright test --reporter=list --project=\"WebKit\" --headed --timeout=60000 --workers=1",

    "test:edge": "npx playwright test --reporter=list --project=\"Edge\"",
    "test:edge:headed": "npx playwright test --reporter=list --project=\"Edge\" --headed --timeout=60000 --workers=1",

    "test:pixel5": "npx playwright test --reporter=list --project=\"Pixel 5 (Android)\"",
    "test:pixel5:headed": "npx playwright test --reporter=list --project=\"Pixel 5 (Android)\" --headed --timeout=60000 --workers=1",

    "test:galaxys9": "npx playwright test --reporter=list --project=\"Galaxy S9+ (Android)\"",
    "test:galaxys9:headed": "npx playwright test --reporter=list --project=\"Galaxy S9+ (Android)\" --headed --timeout=60000 --workers=1",

    "test:iphone12": "npx playwright test --reporter=list --project=\"iPhone 12\"",
    "test:iphone12:headed": "npx playwright test --reporter=list --project=\"iPhone 12\" --headed --timeout=60000 --workers=1",

    "test:iphonese": "npx playwright test --reporter=list --project=\"iPhone SE\"",
    "test:iphonese:headed": "npx playwright test --reporter=list --project=\"iPhone SE\" --headed --timeout=60000 --workers=1",
    "codegen": "npx playwright codegen"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^25.0.2",
    "dotenv": "^16.0.0"
  },
  "dependencies": {
    "marked": "^17.0.1",
    "pptxgenjs": "^3.9.0",
    "puppeteer": "^24.34.0"
  }
}
